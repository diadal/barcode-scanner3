{
  "name": "@diadal/barcode-scanner",
  "version": "0.1.3",
  "type": "module",
  "description": "A fast and efficient (QR) barcode scanner for Capacitor",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "DiadalBarcodeScanner.podspec"
  ],
  "author": "Diadal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diadal/barcode-scanner3.git"
  },
  "bugs": {
    "url": "https://github.com/diadal/barcode-scanner3/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api BarcodeScannerPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.1",
    "@capacitor/docgen": "^0.2.1",
    "@capacitor/ios": "^6.0.1",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "prettier-plugin-java": "^2.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^4.27.3",
    "swiftlint": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.1"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@capacitor/core": "^6.0.1"
  }
}
